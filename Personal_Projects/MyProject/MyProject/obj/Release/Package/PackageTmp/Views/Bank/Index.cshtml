@model MyProject.Controllers.CardWithDetails

@{
    ViewBag.Title = "Bank System";
}

<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("Index", "Bank", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <section id="bankLoginForm">
                @Html.AntiForgeryToken()
                <h4>Use your card numbers to log in.</h4>

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Numbers, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Numbers, new { @class = "form-control", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.Numbers, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>
            </section>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



