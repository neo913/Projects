    <![endif]-->
</head>
<body>
    <div id="game_2048">
        <div class="title"><b>2048</b></div>
        <div class="score-bar">
            <div class="score">
                Score<br />
                <div id="cur_score" class="score-sm">0</div>
            </div>
            <div class="score">
                BEST<br />
                <div id="hi_score" class="score-sm">10000</div>
            </div>
        </div>
        <div class="newgame-bar">
            <div class="join-text">
                Join the numbers and get to the 2048 tile!
            </div>
            <button class="newgame" onclick="newGame()">New Game</button>
        </div>

    <div id="container">
        <div id="base_16" class="base_16"></div>
    </div>

</div>

    <script src="../../Content/js/game_2048.js" type="text/javascript"></script>
</body>
</html>
