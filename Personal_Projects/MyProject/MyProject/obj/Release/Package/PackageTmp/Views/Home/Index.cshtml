@{
    ViewBag.Title = "Portfolio";
}
<style>body{overflow:hidden;}</style>

<div class="site-inner" id="mainPage">
    <header>
        <div class="navbar-header">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <img src="../Content/Images/logo_text.png" style="width: 80px;" />
            </a>
        </div>
    </header>

    <div class="container-fluid row">
        <div id="mainSlide" class="carousel slide" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="../Content/Images/slider1.jpg" alt="Slide Image1" />
                    <div class="carousel-caption cap-custom">
                        <h3>Hello, I'm Edward</h3>
                    </div>
                </div>

                <div class="item">
                    <img src="../Content/Images/slider2.jpg" alt="Slide Image2" />
                    <div class="carousel-caption cap-custom">
                        <h3>A Programmer</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="../Content/Images/slider3.jpg" alt="Slide Image3" />
                    <div class="carousel-caption cap-custom">
                        <h3>Team-Oriented</h3>
                    </div>
                </div>

                <div class="item">
                    <img src="../Content/Images/slider4.jpg" alt="Slide Image4" />
                    <div class="carousel-caption cap-custom">
                        <h3>Contact Me!</h3>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#mainSlide" role="button" data-slide="prev" target="_self" ng-non-bindable>
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#mainSlide" role="button" data-slide="next" target="_self" ng-non-bindable>
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="clearfix"></div>

            <div id="product">

                <div class="col-sm-4">
                    <a href="../Portfolio">
                        <div class="innerBox">
                            <h4>ABOUT</h4>
                            <p class="text-box">
                                On this page, you can see my web version resume including
                                profile, skills, academic information and experiences.<br />
                                Please take a look!<br />
                            </p>
                        </div>
                    </a>
                </div>

                <div class="col-sm-4">
                    <a href="./Portfolio/Work">
                        <div class="innerBox">
                            <h4>WORK</h4>
                            <p class="text-box">
                                On this page, you can see all of my projects. Also, you can visit my github and try my projects.<br />
                            </p>
                        </div>
                    </a>
                </div>

                <div class="col-sm-4 fix5">
                    <a href="#" class="setH" data-toggle="modal" data-target="#contact-modal">
                        <div class="innerBox pull-down">
                            <h4>CONTACT</h4>
                            <p class="text-box">
                                If you liked this porfolio / website, please don't hesitate to contact me!
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <!-- Contact Modal -->
    <div id="contact-modal" class="modal fade contact-cont" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Contact Modal -->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title contact-title"> Contact Me!</h2>
                </div>

                <div class="modal-body pad-helper">
                    <form id="contactForm" action="MAILTO:nedinsuyun@gmail.com" method="post" enctype="text/plain">
                        <div class="col-md-12">
                            <div class="form-group col-md-5">
                                <label class="control-label col-md-3">Name: </label>
                                <div class="col-md-9">
                                    <input class="form-control col-md-8" type="text" name="name" placeholder="Your name">
                                </div>
                            </div>
                            <div class="form-group col-md-7">
                                <label class="control-label col-md-3">Email: </label>
                                <div class="col-md-9">
                                    <input class="form-control col-md-9" type="text" name="email" placeholder="Your email">
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label class="control-label col-md-4">Content: </label>
                            <div class="col-md-12">
                                <textarea class="form-control col-md-12 text-area" name="content"></textarea>
                            </div>
                        </div>

                        <div class="contact-btn col-md-12">
                            <input class="btn btn-default social" type="submit" value="Send">
                            <a href="https://ca.linkedin.com/in/nedinsuyun" target="_blank">
                                <img class="social icons" src="../Content/Images/linkedin.png" alt="linkedin icon" />
                            </a>
                            <a href="https://facebook.com/nedinsuyun" target="_blank">
                                <img class="social icons" src="../Content/Images/facebook.png" alt="linkedin icon" />
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Contact Modal -->

</div>
